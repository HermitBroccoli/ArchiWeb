doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ArchiWeb
        link(rel="stylesheet", href="css/app.min.css")
    body 
        header.header 
            .container.header-wrapper
                h1.header__title ArchiWeb 

                .header-lists 
                    nav 
                        ul.header-list
                            li.header-item 
                            a(href="#").header-link Home 
                            li.header-item 
                            a(href="#").header-link  Project
                            li.header-item
                            a(href="#").header-link  About
                            li.header-item
                            a(href="#").header-link  Contact
                        
        .main 
            .container.main-wrapper 
                img(src="img/bg/home.png", alt="item").main__img
